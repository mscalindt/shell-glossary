#! .desc:
# Process each argument with a function
#! .params:
# <"$1"> - function
# <"$2">+ - argument
#! .gives:
# <"$_arg"> - [string];
#             last processed <[$2]>
#! .rc:
# (0) success
#! .rc.fn:
# ($2) (*) error
#.
map() {
    _arg=; while [ "$#" -ge 2 ]; do
        "$1" "$2" || { set -- "$?" "$2"; _arg="$2"; return "$1"; }

        _i="$1"; _arg="$2"; shift 2; [ "$#" = 0 ] || set -- "$_i" "$@"
    done

    return 0
}
