#! .desc:
# Match specific option(s) without an option argument
#! .params:
# <"$1"+> - option(s)
#! .uses:
# <opt> $ - string;
#           first positional parameter
#! .gives:
# (0) <"$opt_match"> - string;
#                      literal option matched
# (0) <$opt_shift> - integer;
#                    shift count for option
#! .rc:
# (0) success
# (1) no match
#.
ssopt() {
    while [ "$1" ]; do
        # Try to match an option without an argument.
        case "$opt" in
            "$1")
                opt_arg=
                opt_match="$1"
                opt_shift=1
                opt=

                return 0
            ;;
        esac

        shift
    done

    return 1
}
