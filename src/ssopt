#! .desc:
# Match specific option(s) without an option argument
#! .params:
# <"$1">+ - option(s)
#! .uses.var:
# <opt> $ - string;
#           first positional parameter
#! .gives:
# (0) <"$opt_match"> - string;
#                      literal option matched
#! .sets:
# (0) <opt> $ - '';
# (0) <opt_arg> $ - '';
# (0) <opt_shift> $ - '1';
#! .rc:
# (0) success
# (1) no match
#.
ssopt() {
    while [ "$1" ]; do
        # Try to match an option without an argument.
        case "$opt" in
            "$1")
                opt_arg=
                opt_match="$1"
                opt_shift=1
                opt=

                return 0
            ;;
        esac

        shift
    done

    return 1
}
