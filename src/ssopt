#! .desc:
# Match specific option(s) without an option argument
#! .params:
# <[$1]> - option
# <[$2]>+ - string
#! .sets:
# (0) <opt_match> $ - "$1";
#! .rc:
# (0) true
# (1) false
#! .ec:
# (255) input error
#.
ssopt() {
    [ "$#" -ge 2 ] || exit 255

    opt_match="$1"

    shift

    while [ "$#" -ge 1 ]; do
        # Assert $opt_match fully matches $1.
        case "$opt_match" in
            "$1") return 0 ;;
        esac

        shift
    done

    return 1
}
