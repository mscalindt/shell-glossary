#! .desc:
# Count visible file objects in a directory
#! .params:
# <$1> - directory path
# [$2] - prefix
# [$3] - suffix
#! .gives.var:
# (0) <_count> - integer
#! .rc:
# (0) success
# (*) error
#.
count_file() {
    count_obj "$1" "$2" "$3" && set -- "$1" "$2" "$3" "$_count" && \
    count_dir "$1" "$2" "$3" && _count=$(($4 - _count))
}
