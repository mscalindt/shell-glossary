#! .desc:
# Test if the sum of a character in a string is even
#! .params:
# <"$1"> - character
# <"$2"> - string
#! .uses:
# <ccount> ('$1' '$2');
#          Count the times a character appears in a string
#! .rc:
# (0) even
# (1) uneven
# (*) error
# (255) bad input
#.
char_even() {
    ccount "$1" "$2" || return "$?"  # -> $_count

    # Assert $_count is even using modulo. `0` if even, `1` if odd, which also
    # aligns with the return code of `test` (`[`).
    [ "$((_count % 2))" -eq 0 ]
}
