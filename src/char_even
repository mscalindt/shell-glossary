#! .desc:
# Test if the sum of a character in a string is even
#! .params:
# <"$1"> - character
# <"$2"> - string
#! .uses:
# <ccount> ('$1' '$2');
#          Count the times a character appears in a string
# [POSIX_COMPAT] $ - environment variable;
#                    forces the usage of parameter expansion; necessary for
#                    POSIX.1-2024 compliance
#! .gives:
# (0|1) <$_count> - integer
#! .rc:
# (0) even
# (1) uneven
# (*) error
# (255) bad input
#.
char_even() {
    ccount "$1" "$2" || return "$?"  # -> $_count

    # Assert $_count is even using modulo.
    [ "$((_count % 2))" -eq 0 ]
}
