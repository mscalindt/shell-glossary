#! .desc:
# Signify operand count exceeds maximum allowed
#! .params:
# <$1> - operand count
# [$2] - maximum count
#! .rc:
# (0) success
#! .ec:
# (255) input error
#.
opd_max() {
    [ "$1" ] || exit 255

    printf "%s: Too many operands: %s\n" "${0##*/}" "$1" >&2

    if [ "$2" ]; then
        printf " > max allowed: %s\n" "$2" >&2
    fi

    printf "%s: Try '%s --help' for more information.\n" \
        "${0##*/}" "${0##*/}" >&2

    return 0
}
