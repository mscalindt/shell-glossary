#! .desc:
# Signify option incompatibility with a previous option and exit
#! .params:
# <"$1"> - incompatible option
#! .uses:
# <opt_match> $ - string;
#                 previous option
#! .ec:
# (2) incompatible option
# (255) bad input
#.
opt_compat_fail() {
    [ "$1" ] || exit 255

    printf "%s: '%s': Incompatible with: '%s'\n" \
        "${0##*/}" "$opt_match" "$1" >&2

    printf "%s: Try '%s --help' for more information.\n" \
        "${0##*/}" "${0##*/}" >&2

    exit 2
}
