#! .desc:
# Signify option failure and exit
#! .params:
# [$1]+ - valid option argument
#! .uses.var:
# <opt_arg> - [string];
#             option argument
# <opt_match> - string;
#               option string
#! .uses.fn:
# <opt_err> ('$opt_match' '$opt_arg' '$@');
#           Signify option failure
#! .ec:
# (2) option failure
# (255) bad usage
#! .ec.fn:
# (opt_err) (*) error
#.
opt_fail() {
    [ "$opt_match" ] || exit 255

    { opt_err "$opt_match" "$opt_arg" "$@" || exit "$?"; }; exit 2
}
