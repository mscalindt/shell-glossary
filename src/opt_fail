#! .desc:
# Signify option failure and exit
#! .params:
# ["$1"+] - valid argument(s)
#! .uses.var:
# <opt_match> $ - string;
#                 option
# [opt_arg] $ - string;
#               argument
#! .uses.fn:
# <opt_err> ('$opt_match' '$opt_arg' '$@');
#           Signify option failure
#! .ec:
# (*) error
# (2) option failure / error
# (255) bad usage / error
#! .ec.fn:
# (opt_err) (*) error
#! .caveats:
# > `ARG_MAX`.
#.
opt_fail() {
    [ "$opt_match" ] || exit 255

    { opt_err "$opt_match" "$opt_arg" "$@" || exit "$?" }; exit 2
}
