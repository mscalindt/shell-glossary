#! .desc:
# Signify option failure and exit
#! .params:
# ["$1"+] - valid argument(s)
#! .uses:
# <opt_match> $ - string;
#                 option
# <opt_err> ('$opt_match' '$opt_arg' '$@');
#           Signify option failure
# [opt_arg] $ - string;
#               argument
#! .ec:
# (2) option failure
#.
opt_fail() {
    opt_err "$opt_match" "$opt_arg" "$@"; exit 2
}
