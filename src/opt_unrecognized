#! .desc:
# Signify unrecognized long option
#! .params:
# <$1> - option
#! .rc:
# (0) success
#! .ec:
# (255) input error
#.
opt_unrecognized() {
    [ "$1" ] || exit 255

    printf "%s: Unrecognized option: '%s'\n" "${0##*/}" "$1" >&2

    printf "%s: Try '%s --help' for more information.\n" \
        "${0##*/}" "${0##*/}" >&2

    return 0
}
