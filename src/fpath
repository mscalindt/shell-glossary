#! .desc:
# Convert a path to absolute
#! .params:
# <"$1"> - path
#! .gives:
# <"$_path"> - string;
#              [absolute <$1>]
#.
fpath() {
    # Use $PWD (the pathname of the current working directory) to convert a
    # relative path into an absolute one if it's not already.
    case "$1" in
        '/'*) _path="$1" ;;
        *) _path="$PWD/$1" ;;
    esac
}
