#! .desc:
# Count visible directories in a directory
#! .params:
# <"$1"> - directory path
# ["$2"] - suffix
#! .gives:
# (0) <$_count> - integer
#! .rc:
# (0) success
# (255) bad usage
#.
count_dir() {
    # Assert $1 is a valid directory.
    [ -d "$1" ] || return 255
    [ -r "$1" ] || return 255

    _count=0

    # Use a glob pattern to match the visible directories in $1 (the directory)
    # with an optional $2 (suffix).
    set -- "$1"/*"$2"/

    # Assert the glob expanded.
    if [ -e "$1" ]; then
        _count=$#
    fi

    return 0
}
