#! .desc:
# Signify bad configuration file and exit
#! .params:
# <"$1"> - absolute path
#! .ec:
# (2) bad configuration file
# (255) bad input
#.
conf_fail() {
    [ "$1" ] || exit 255

    printf "%s: Bad configuration file: '%s'\n" \
        "${0##*/}" "$1" >&2

    printf "%s: Try '%s --help' for more information.\n" \
        "${0##*/}" "${0##*/}" >&2

    exit 2
}
