#! .desc:
# Signify invalid configuration file and exit
#! .params:
# <$1> - path
#! .ec:
# (2) invalid configuration file
# (255) input error
#.
cfg_fail() {
    [ "$1" ] || exit 255

    printf "%s: Invalid configuration file: '%s'\n" \
        "${0##*/}" "$1" >&2

    printf "%s: Try '%s --help' for more information.\n" \
        "${0##*/}" "${0##*/}" >&2

    exit 2
}
