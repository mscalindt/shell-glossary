#! .desc:
# Set a bit, the power of 2, in a pseudo-bitmask shell variable
#! .params:
# <$1> - bit
# <$2> - variable name
#! .rc:
# (0) success
# (*) error
#! .ec:
# (255) input error
#.
mask_set() {
    # Remove `0x` from $1 (bit) if present.
    set -- "${1#0x}" "$2"

    assert -bit "$1" || exit 255
    assert -shell-name "$2" || exit 255

    eval "$2=\$(($2 | $1))"
}
