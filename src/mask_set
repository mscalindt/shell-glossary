#! .desc:
# Set a bit, the power of 2, in a pseudo-bitmask shell variable
#! .params:
# <$1> - bit
# <$2> - variable name
#! .uses:
# <assert> ("type" "string");
#          Assert a string
#! .rc:
# (0) success
# (255) bad input/usage
#.
mask_set() {
    # Remove `0x` from $1 (bit) if present.
    set -- "${1#0x}" "$2"

    # Assert $1 is a natural number and a valid bit (power of 2).
    assert -bit "$1" || return 255

    # Assert $2 is a valid shell variable name.
    assert -shell-name "$2" || return 255

    # Set $1 (bit) in $2 (bitmask).
    { eval "$2=\$(($2 | $1))"; } 2> /dev/null || return 255
}
