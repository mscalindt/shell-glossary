#! .desc:
# Process each populated string line with a function
#! .params:
# <$1> - string
# <$2> - function name
# [$3]+ - function argument
#! .rc:
# (0) success
# (*) error
#! .desc.ext:
# > "POSIX.1-2024, Volume: Shell & Utilities, Section: Shell Command Language,
#   Subsection: Here-Document".
#.
sline_map() {
    _str="$1"; shift; while IFS= read -r _line; do
        [ "$_line" ] || continue
        "$@" "$_line" || return "$?"
    done \
<<EOF
$_str
EOF
}
