#! .desc:
# Count hidden (.*) file objects in a directory
#! .params:
# <"$1"> - absolute directory path
# ["$2"] - file suffix
#! .uses:
# <count_dir_dot> ('$1' '$2');
#                 Count hidden (.*) directories in a directory
# <count_obj_dot> ('$1' '$2');
#                 Count all hidden (.*) objects in a directory
#! .gives:
# (0) <$_count> - integer
#! .rc:
# (0) success
# (*) error
#! .caveats:
# > `ARG_MAX`.
#.
count_file_dot() {
    # Use count_obj_dot() to obtain the count of hidden files and directories
    # into $_count and set it as the third positional parameter.
    count_obj_dot "$1" "$2" || return "$?"
    set -- "$1" "$2" "$_count"

    # Use count_dir_dot() to obtain the count of hidden directories into
    # $_count and subtract it from the total count to determine the count of
    # hidden files, updating $_count.
    count_dir_dot "$1" "$2" || return "$?"
    _count=$(($3 - _count))
}
