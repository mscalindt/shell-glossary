#! .desc:
# Signify invalid short option
#! .params:
# <$1> - option string
#! .rc:
# (0) success
#! .ec:
# (255) input error
#.
opt_invalid() {
    [ "$1" ] || exit 255

    printf "%s: Invalid option: '%s'\n" "${0##*/}" "$1" >&2

    printf "%s: Try '%s --help' for more information.\n" \
        "${0##*/}" "${0##*/}" >&2

    return 0
}
