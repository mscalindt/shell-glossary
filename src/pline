#! .desc:
# Print specific line in file
#! .params:
# <$1> - line number
# <"$2"> - absolute path of a file
# [$3] - options(
#     '-ltstrip' - strip all leading/trailing whitespace characters
#     .
# )
#! .gives:
# (0) <"$_line"> - string
#! .rc:
# (0) success
# (1) line does not exist
# (2) not a file | file does not exist
# (3) file access error
# (255) bad input
#! .caveats:
# > NULL character.
#   >> Fix: none
# > Reading /proc is unreliable.
#   >> Fix: `cat`
#.
pline() {
    # Assert $1 is a natural number.
    case $1:${1#*[!0123456789]} in
        : | 0*) return 255 ;;
        "$1:$1") : ;;
        *) return 255 ;;
    esac

    [ -f "$2" ] || return 2
    [ -r "$2" ] || return 3

    case "$3" in
        '-ltstrip')
            _i=0; while read -r _line || [ "$_line" ]; do
                _i=$((_i + 1))
                case $_i in
                    "$1")
                        return 0
                    ;;
                esac
            done < "$2"
        ;;
        *)
            _i=0; while IFS= read -r _line || [ "$_line" ]; do
                _i=$((_i + 1))
                case $_i in
                    "$1")
                        return 0
                    ;;
                esac
            done < "$2"
        ;;
    esac

    return 1
}
