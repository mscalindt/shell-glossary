#! .desc:
# Count all visible objects in a directory
#! .params:
# <"$1"> - absolute directory path
# ["$2"] - suffix
#! .uses:
# <assert> ('-absolute-path' '$1');
#          Assert a string
#! .gives:
# (0) <$_count> - integer
#! .rc:
# (0) success
# (255) bad input/usage
#! .caveats:
# > `ARG_MAX`.
#.
count_obj() {
    # Assert $1 is an absolute path.
    assert -absolute-path "$1" || return 255

    # Assert $1 is a valid directory.
    [ -d "$1" ] || return 255
    [ -r "$1" ] || return 255

    _count=0

    # Use a glob pattern to match visible files and directories in $1 (the
    # directory) with an optional $2 (suffix).
    set -- "${1%/}"/*"$2"

    # Assert the glob expanded.
    if [ -e "$1" ]; then
        _count=$#
    fi
}
