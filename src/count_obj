#! .desc:
# Count all visible objects in a directory
#! .params:
# <"$1"> - directory path
# ["$2"] - suffix
#! .gives:
# (0) <$_count> - integer
#! .rc:
# (0) success
# (*) error
# (255) bad usage
#.
count_obj() {
    # Assert $1 is a valid directory.
    [ -d "$1" ] || return 255
    [ -r "$1" ] || return 255

    _count=0

    # Use a glob pattern to match visible files and directories in $1 (the
    # directory) with an optional $2 (suffix).
    set -- "$1"/*"$2" || return "$?"

    # Assert the glob expanded.
    if [ -e "$1" ]; then
        _count=$#
    fi

    return 0
}
