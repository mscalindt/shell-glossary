#! .desc:
# Signify option failure
#! .params:
# <"$1"> - option
# ["$2"] - argument
# ["$3"+] - valid argument(s)
#.
opt_err() {
    if [ "$2" ]; then
        printf "%s: Bad argument '%s' for '%s'\n" \
            "${0##*/}" "$2" "$1" >&2
        shift 2
    else
        printf "%s: '%s': Failed.\n" \
            "${0##*/}" "$1" >&2
        shift
    fi

    if [ "$1" ]; then
        echo "Valid arguments are:"

        while [ "$1" ]; do
            printf " > '%s'\n" "$1" >&2; shift
        done
    fi

    printf "%s: Try '%s --help' for more information.\n" \
        "${0##*/}" "${0##*/}" >&2
}
