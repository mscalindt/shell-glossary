#! .desc:
# Signify option failure
#! .params:
# <$1> - option
# [$2] - option argument
# [$3]+ - valid option argument
#! .rc:
# (0) success
#! .ec:
# (255) input error
#.
opt_err() {
    [ "$#" -ge 1 ] || exit 255

    if [ "$#" -ge 2 ]; then
        printf "%s: Invalid argument '%s' for '%s'\n" \
            "${0##*/}" "$2" "$1" >&2
        shift 2
    else
        printf "%s: '%s': Failed.\n" \
            "${0##*/}" "$1" >&2
        shift
    fi

    if [ "$#" -ge 1 ]; then
        echo "Valid option arguments are:"

        while [ "$#" -ge 1 ]; do
            printf " > '%s'\n" "$1" >&2; shift
        done
    fi

    printf "%s: Try '%s --help' for more information.\n" \
        "${0##*/}" "${0##*/}" >&2

    return 0
}
