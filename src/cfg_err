#! .desc:
# Signify invalid configuration file
#! .params:
# <$1> - path
#! .rc:
# (0) success
#! .ec:
# (255) input error
#.
cfg_err() {
    [ "$1" ] || exit 255

    printf "%s: Invalid configuration file: '%s'\n" \
        "${0##*/}" "$1" >&2

    printf "%s: Try '%s --help' for more information.\n" \
        "${0##*/}" "${0##*/}" >&2

    return 0
}
