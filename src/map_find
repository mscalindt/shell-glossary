#! .desc:
# Find success among arguments using a function
#! .params:
# <"$1"> - function
# <"$2">+ - argument
#! .gives:
# (0) <"$_arg"> - [string];
#                 successfully processed $2
#! .rc:
# (1) false / error
# (*) error
#! .rc.fn:
# ($1) (0) success
#.
map_find() {
    while [ "$#" -ge 2 ]; do
        "$1" "$2" && { _arg="$2"; return "$?"; } || :

        _i="$1"; shift 2; [ "$#" = 0 ] || set -- "$_i" "$@"
    done

    return 1
}
