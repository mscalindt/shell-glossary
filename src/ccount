#! .desc:
# Count the times a character appears in a string
#! .params:
# <"$1"> - character
# <"$2"> - string
#! .gives:
# <$_count> - integer
#! .rc:
# (0) success
#.
ccount() {
    _ccount() {
        # Save IFS
        _old_IFS="$IFS" 2> /dev/null
        ${IFS+':'} unset _old_IFS 2> /dev/null

        IFS="$1"

        set -f; case "$2" in
            *"$IFS") set -- $2; _count=$# ;;
            *) set -- $2; _count=$(($# - 1)) ;;
        esac; set +f

        # Restore IFS
        IFS="$_old_IFS" 2> /dev/null
        ${_old_IFS+':'} unset IFS 2> /dev/null
    }

    _ccount "$1" "$2"
}
