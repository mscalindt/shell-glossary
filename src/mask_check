#! .desc:
# Check a bit, the power of 2, in a pseudo-bitmask shell variable
#! .params:
# <$1> - bit(
#     '0' - check if no bits are set
#     .
# )
# <$2> - variable name
#! .uses.fn:
# <assert> ("type" "string" "string");
#          Assert a string
#! .rc:
# (0) true
# (1) false
# (*) error
#! .rc.fn:
# (assert) (255) bad input / bad usage
#.
mask_check() {
    # Remove `0x` from $1 (bit) if present.
    set -- "${1#0x}" "$2"

    { assert -eq "$1" 0 || assert -bit "$1"; } || return 255
    assert -shell-name "$2" || return 255

    # Safely evaluate $2 (variable name) into its literal content.
    eval set -- "$1" "\$$2"

    assert -whole-n "$2" || return 255

    # Handle value `0` specially by asserting no bits are set.
    case "$1" in
        '0') [ "$2" = 0 ] ;;
        *) [ "$(($1 & $2))" = "$1" ] ;;
    esac
}
